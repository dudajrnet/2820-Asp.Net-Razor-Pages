@page "~/categorias/{skip?}/{take?}"
@model MyRazorApp.Pages.Categories
@{
    ViewData["Title"] = "Categorias";
}

<h1>Categoria</h1>
<div>
    <table>
        <thead>
            <tr>
                <td>ID</td>
                <td>Item</td>
                <td>Preço</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.CategoriesList)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Title</td>
                    <td>@category.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>